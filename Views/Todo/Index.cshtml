@model IEnumerable<Sample_.Models.TodoItem>
<h2>TodoList</h2>
<table class="table">
    <thead>
        <tr>
            <th>Task</th>
            <th>Completed</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>@item.Task</td>
                    <td>@item.IsCompleted</td>
                    <td>
                        <a href="@Url.Action("Edit",new {id=item.Id})">Edit</a>
                        <a href="@Url.Action("Delete",new {id=item.Id})">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
</table>

<a href="@Url.Action("Create")">Add New </a>